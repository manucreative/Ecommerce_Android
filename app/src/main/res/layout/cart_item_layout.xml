<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    >

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/prod_img"
            android:layout_gravity="center_vertical"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_product_name"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="6"
                android:text="product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_weight="1"
                    android:id="@+id/txt_amount"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:initialNumber="1"
                    app:finalNumber="100"
                    app:textSize="10sp"
                    app:backGroundColor="@color/colorLimeGreen">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_top_up"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Top-ups: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_total_price"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Item Totals: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_vat"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="VAT: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_full_price"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="6"
                    android:textColor="@color/white"
                    android:text="Ksh 200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <Button
                    android:id="@+id/btn_delete_cart"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:text="Remove"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="end">

                </Button>

            </LinearLayout>
        </LinearLayout>
            
    </LinearLayout>

</androidx.cardview.widget.CardView>
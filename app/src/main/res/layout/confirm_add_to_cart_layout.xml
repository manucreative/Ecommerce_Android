<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_cart_product_name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Fresh Onions"
                        android:layout_gravity="bottom"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="8dp"
                        android:text="X 7"
                        android:textColor="@color/colorOrange"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold" />
                </LinearLayout>


                    <TextView
                        android:id="@+id/txt_cart_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Ksh 700"
                        android:textColor="@color/colorOrange"
                        android:textSize="30sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/txt_top_ups"
                android:text="Your Top Ups"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/top_up_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Onions"
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brands"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bills"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorLimeGreen"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_____________________________________________________________"
                android:layout_marginTop="-7dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item price: "
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/top_up_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top-up price: "
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tax_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vat price: "
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_____________________________________________________________"
                android:layout_marginTop="-7dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Ksh 7051.00"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>